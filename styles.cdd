body {
  font-family: system-ui, Arial, sans-serif;
  margin: 0;
  background: #f7f8fb;
  color: #111;
}
.wrap { width: min(900px, 90%); margin: auto; }
header { text-align: center; padding: 3rem 0 1rem; }
h1 { margin: 0; }
.tag { color: #555; margin-bottom: 1rem; }
.card {
  background: #fff;
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  padding: 1rem 1.5rem;
  margin: 1rem 0;
}
a { color: #0f62fe; }
